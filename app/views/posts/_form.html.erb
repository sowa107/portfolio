<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
  </ul>
<% end %>

<%= f.label :title %><br>
<%= f.text_field :title %>
<br>
<br>
<%= f.label :content %><br>
<%= f.text_area :content %>
<br>
<br>
<%= f.label :iemg %><br>
<%= f.file_field :iemg %>
<br>
<br>
<%= f.submit %>

<% end %>
